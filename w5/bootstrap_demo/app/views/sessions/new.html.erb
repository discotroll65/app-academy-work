<div class="row">
  <div class="col-xs-4 col-xs-offset-1">
    <h1>Sign In</h1>
    <%= render(
      "layouts/username_password_form",
      url: session_url,
      button_msg: "Sign In",
      user: @user
    ) %>
  </div>
  
  <div class="col-xs-1 col-xs-push-6">
    <%= button_to "Sign Up",
      new_user_url,
      method: :get, class: "btn btn-primary" %>
  </div>
</div>
