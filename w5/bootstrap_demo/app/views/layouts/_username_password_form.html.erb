<form action="<%= url %>" method="post">
  <%= csrf_tag %>

  <div class="form-group">
    <label for="username">Username
    </label>
      <input id="username" class='form-control' type="text" name="user[username]" value="<%= user.username %>">
  </div>

  <div class="form-group">
    <label for="password">Password
    </label>
      <input id='password' class='form-control' type="password" name="user[password]">
  </div>

  <input class="btn btn-default" type="submit" value="<%= button_msg %>">

</form>
