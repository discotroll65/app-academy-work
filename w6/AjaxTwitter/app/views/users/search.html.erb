<h1>Search!</h1>

<form action="/users/search" method="GET">
  <input
    type="text"
    name="query"
    value="<%= @query %>">

  <input type="submit" value="Search Users!">
</form>

<ul>
  <% @users.each do |user| %>
    <li>
      <%
        if @current_user_followees.any?{|followee| followee.id == user.id }
          initial_follow_state = "following"
        else
          initial_follow_state = "not-following"
        end
        %>

      <%= link_to user.username, user_url(user) %>
      <%= render "follows/form", user: user,
      initial_follow_state: initial_follow_state %>
    </li>
  <% end %>
</ul>
